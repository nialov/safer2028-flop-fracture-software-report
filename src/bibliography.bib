@article{abdullah_automatic_nodate,
	title = {Automatic {Mapping} of {Lineaments} {Using} {Shaded} {Relief} {Images} {Derived} {From} {Digital} {Elevation} {Model} ({DEMs}) in the {Maran} – {Sungi} {Lembing} {Area}, {Malaysia}},
