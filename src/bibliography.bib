	urldate = {2022-04-29},
	journal = {Marine and Petroleum Geology},
	author = {Furtado, Carla P.Q. and Medeiros, Walter E. and Borges, Sergio V. and Lopes, Juliana A.G. and Bezerra, Francisco H.R. and Lima-Filho, Francisco P. and Maia, Rubson P. and Bertotti, Giovanni and Auler, Augusto S. and Teixeira, Washington L.E.},
	month = jul,
