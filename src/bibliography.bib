@techreport{cottrell_occurrence_2022,
	address = {Olkiluoto},
	type = {Working {Report}},
	title = {Occurrence of {Large} {Fractures} in the {Host} {Rock} for a {Spent} {Nuclear} {Fuel} {Repository}: {Earthquake} {Study}},
	abstract = {As part of the Posiva's safety case for the operational licence application of the spent
nuclear fuel repository at Olkiluoto it needs to identify and assess scenarios for the far
future evolution of the Olkiluoto disposal site. The methodology for scenario formulation
identifies the most important factors of uncertainty in the knowledge of the evolution of
the disposal system. These factors are termed as "key factors" (KFs). One of the KFs is
defined to capture the uncertainty in the knowledge of future earthquakes associated with
glacial loading and unloading of the crust and their consequences for the performance of
the disposal system. Such a far into the future earthquake may lead to or contribute to an
evolutionary path that leads to a loss of canister's integrity. The radiological consequences
of such incidents are analysed in the TURVA-2020 Analysis of Releases (AOR) report.
The long-term seismic hazard potentially affecting the repository can be reduced to the
following cases related to displacement induced by the seismic event:


The deposited canister is intersected by a fault on which an earthquake and the
related primary displacement can occur, or
The deposited canister is intersected by a large enough fracture to host damaging
secondary displacements induced by the quasi-static and dynamic effects of an
earthquake occurring at a distance from the fracture.
The hazard imposed by the primary displacement can be mitigated straightforwardly by
avoiding canister emplacement within fault cores and their associated damage zones,
where most of the slip takes place during an earthquake. Consequently, the seismic hazard
is reduced to the effects caused by the secondary displacements.
The purpose of this report is to assess quantitatively what is the probability that a fracture
of a specific size would intersect planned canister positions by using the latest DFN model
of Olkiluoto (Posiva WR 2017-32) and repository layout described in the TURVA-2020
Initial State report. The report presents a quantitative assessment of the likelihood of such
situations occurring over the repository footprint and at individual deposition holes. The
assessment is based on the description of the bedrock fracture systems at Olkiluoto and
therefore the report also includes a description of the fracture system as given in the latest
discrete fracture network (DFN) model (Posiva WR 2017-32).},
	language = {English},
	number = {2021-09},
	institution = {Posiva},
	author = {Cottrell, Mark},
	month = mar,
	year = {2022},
	pages = {150},
}

