	journal = {Frontiers in Earth Science},
	author = {Shi, Yongxiang and Ballesio, Marco and Johansen, Kasper and Trentman, Daniel and Huang, Yunsong and McCabe, Matthew F. and Bruhn, Ronald and Schuster, Gerard},
