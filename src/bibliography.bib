@article{harwin_assessing_2012,
	title = {Assessing the {Accuracy} of {Georeferenced} {Point} {Clouds} {Produced} via {Multi}-{View} {Stereopsis} from {Unmanned} {Aerial} {Vehicle} ({UAV}) {Imagery}},
