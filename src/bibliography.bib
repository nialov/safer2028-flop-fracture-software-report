	issn = {0043-1397, 1944-7973},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/10.1002/2016WR018666},
	doi = {10.1002/2016WR018666},
	abstract = {In discretely fractured reservoirs such as those found in Enhanced/Engineered Geothermal Systems (EGS), knowledge of the fracture network is important in understanding the thermal hydraulics, i.e., how the ﬂuid ﬂows and the resulting temporal evolution of the subsurface temperature. The purpose of this study was to develop an analytical model of the ﬂuid ﬂow and heat transport in a discretely fractured network that can be used for a wide range of modeling applications and serve as an alternative analysis tool to more computationally intensive numerical codes. Given the connectivity and structure of a fracture network, the ﬂow in the system was solved using a linear system of algebraic equations for the pressure at the nodes of the network. With the ﬂow determined, the temperature in the fracture was solved by coupling convective heat transport in the fracture with one-dimensional heat conduction perpendicular to the fracture, employing the Green’s function derived solution for a single discrete fracture. The predicted temperatures along the fracture surfaces from the analytical solution were compared to numerical simulations using the TOUGH2 reservoir code. Through two case studies, we showed the capabilities of the analytical model and explored the effect of uncertainty in the fracture apertures and network structure on thermal performance. While both sources of uncertainty independently produce large variations in production temperature, uncertainty in the network structure, whenever present, had a predominant inﬂuence on thermal performance.},
	language = {en},
	number = {9},
	urldate = {2024-05-22},
	journal = {Water Resources Research},
	author = {Fox, Don B. and Koch, Donald L. and Tester, Jefferson W.},
	month = sep,
	year = {2016},
	pages = {6792--6817},
}

@techreport{kaisko_stress-geology_2023,
	address = {Olkiluoto},
	title = {Stress-{Geology} {Interaction} {Simulation} of the {Olkiluoto} {Site}},
	abstract = {Posiva Oy has chosen the Olkiluoto site in southwest Finland for the construction and operation
of a spent nuclear fuel repository at a depth of approximately 425 m. In-situ stress measurements
conducted at the site indicate significant variability in the principal stress magnitudes and
orientations. The in-situ stress state is a critical component affecting the rock mechanics of the
rock mass and must be thoroughly characterised for the design and performance assessment of an
underground repository for spent nuclear fuel. In Finland, the current in-situ stress field is
primarily caused by tectonic forces from Mid-Atlantic ridge push and the collision of the Eurasian
and African plates. Additionally, temporary reactivation of existing fault zones during the glacial
loading/unloading cycle of the previous Weichselian glaciation resulted in increased spatial
variability observed in the stress field today.
The purpose of this study was to analyse how the stress field in the bedrock surrounding the spent
nuclear fuel disposal facility at Olkiluoto evolved toward the current in-situ stress state through
tectonic thrusting and glacial loading/unloading interacting with the major fault zones at the site.
The primary objective of the study was to understand the range and causes of variability in stress
magnitudes and orientations at the repository depth, and to verify rock parameters. The study was
conducted using numerical modelling software FLAC3D. The simulation model included
significant planar faults representative of the geologic model of Olkiluoto. The in-situ stress state
in the model was established in two stages. In the first stage, tectonic forces were applied with
velocity boundary conditions and in the second stage, a glacial loading/unloading cycle with
associated pore pressure changes was incorporated into the simulation model. Sensitivity of the
results to fault zone shear strength was analysed by conducting several simulations using a range
of shear strength envelopes. In addition, two major thrust directions were applied: the mean trend
of the major principal stress axis at the repository depth as interpreted from the stress
measurements (112°/292°) and an approximation of the possible regional scale direction
(130°/310°). Higher fault zone shear strength parameters resulted in better correspondence
between simulated stress magnitudes and orientations to those observed at the site. Further
improvement with the regional scale thrust direction was only achieved when the shear strengths
were sufficiently high.
The simulations were able to predict stress magnitudes consistent with the measured values at the
site. The results indicate that tectonic thrust alone is not sufficient to fully explain the observed
variability in stress magnitudes and orientations. The introduction of the glacial cycle in the model
resulted in larger spatial variability in the stress field by decreasing stability of the fault zones and
causing consequent fault shearing affecting the stress field orientation and magnitude near the
fault zones. However, the simulated stress magnitudes show considerably less variability than
what is observed in the measurements, reflecting the effect of local heterogeneities in the rock
mass and smaller scale fault zones, which are difficult to incorporate into a large-scale model such
as used in this study. Other uncertainties include the selection of a combination of thrust direction
and fault zone shear strength along with disregarding a more complex geological and glacial
history. Nonetheless, the study reduced the uncertainty associated with the selection of
representative fault shear strength properties. Further, irrespective of the selected shear strength
value or thrust direction, the major low-angle fault zones create discontinuities in the stress field
delineating stress domains within the repository volume.
Keywords: in-situ stress, rock mechanics, brittle fault zone, shear strength, glacial load,
Olkiluoto, ONKALO, stress modelling, stress domain, spent nuclear fuel disposal,
simulation, FLAC3D},
	number = {2023-11},
	institution = {Posiva},
	author = {Kaisko, Outi and Mattila, Jussi and Valli, Jouni and Hakala, Matti},
	month = nov,
	year = {2023},
	pages = {114},
}

