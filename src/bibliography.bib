	journal = {Quarterly Journal of Engineering Geology and Hydrogeology},
	author = {Yeomans, Christopher M. and Claridge, Hester and Hudson, Alexander J. L. and Shail, Robin K. and Willems, Cees and Eyre, Matthew and Harker, Chris},
